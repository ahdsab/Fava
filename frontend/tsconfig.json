{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ES2024",
    "module": "Preserve",
    "resolveJsonModule": true,
    "noPropertyAccessFromIndexSignature": false,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "src/**/*.svelte",
    "test/**/*.ts",
    "*.config.cjs",
    "*.config.mjs"
  ]
}
